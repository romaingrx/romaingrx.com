---
import CalloutComponent, { type CalloutVariant } from './callout.tsx';

interface Props {
  variant?: CalloutVariant;
  title?: string;
  class?: string;
}

const { variant = 'note', title, class: className } = Astro.props;
---

<CalloutComponent variant={variant} title={title} class={className} client:load>
  <slot />
</CalloutComponent>
