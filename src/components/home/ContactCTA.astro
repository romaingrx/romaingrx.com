---
import { routes } from '@/configs/routes';
import { site } from '@/configs/site';
---

<section class="from-background to-muted/20 relative overflow-hidden bg-gradient-to-b py-24">
  <div class="absolute inset-0 z-0 opacity-30">
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(120,119,198,0.3),transparent_40%)]"
    >
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_70%_60%,rgba(120,119,198,0.3),transparent_40%)]"
    >
    </div>
  </div>

  <div class="relative z-10 container mx-auto px-4">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="mb-6 text-3xl font-bold tracking-tight md:text-4xl">Let's Connect</h2>
      <p class="text-muted-foreground mb-8 text-lg">
        Have a question or want to work together on an exciting project? I'd love to hear from you!
      </p>

      <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
        <a
          href={routes.contact}
          class="bg-primary text-primary-foreground hover:bg-primary/90 focus-visible:ring-ring inline-flex items-center justify-center gap-2 rounded-md px-6 py-3 text-base font-medium whitespace-nowrap shadow-lg transition-all hover:shadow-xl focus-visible:ring-2 focus-visible:outline-hidden"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="size-5"
            ><path d="M22 2L11 13"></path><path d="M22 2l-7 20-4-9-9-4 20-7z"></path></svg
          >
          Get in Touch
        </a>

        <a
          href={`https://go.romaingrx.com/cal?utm_source=${site.url}&amp;utm_medium=cta&amp;utm_campaign=homepage`}
          target="_blank"
          rel="noopener noreferrer"
          class="border-input bg-background hover:bg-accent hover:text-accent-foreground focus-visible:ring-ring inline-flex items-center justify-center gap-2 rounded-md border px-6 py-3 text-base font-medium whitespace-nowrap shadow-sm transition-all focus-visible:ring-2 focus-visible:outline-hidden"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="size-5"
            ><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line
              x1="16"
              y1="2"
              x2="16"
              y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line
              x1="3"
              y1="10"
              x2="21"
              y2="10"></line></svg
          >
          Let's Chat
        </a>
      </div>
    </div>
  </div>
</section>
