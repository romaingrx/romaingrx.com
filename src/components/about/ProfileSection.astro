---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import { getEntry, render } from 'astro:content';
import CompactProse from '@/components/ui/compact-prose.astro';
import { platforms_info, type Platform } from '@/configs/platforms';

interface Props {
  author: string;
}

const author = await getEntry('author', Astro.props.author);
if (!author) {
  throw new Error('Author not found for owner of the website');
}
const { name, title, image, socialLinks } = author.data;
const { Content } = await render(author);
---

<section class="container mx-auto px-4 py-12">
  <div class="mx-auto max-w-6xl">
    <!-- Single clean card -->
    <div class="border-border/20 bg-card/30 rounded-2xl border p-8 backdrop-blur-sm">
      <div class="space-y-8">
        <!-- Top section: Image + Basic Info -->
        <div class="flex flex-col gap-6 sm:flex-row sm:gap-8">
          <!-- Profile Image -->
          <div class="flex-shrink-0">
            <div class="relative size-32 overflow-hidden rounded-2xl shadow-md sm:h-40 sm:w-40">
              <Image
                src={image}
                alt={name}
                width={160}
                height={160}
                class="h-full w-full object-cover"
              />
            </div>
          </div>

          <!-- Name, Title, and Social Links -->
          <div class="flex flex-1 flex-col justify-center space-y-4">
            <!-- Name and Title -->
            <div class="space-y-2">
              <h1 class="text-foreground text-3xl font-bold tracking-tight sm:text-4xl">
                {name}
              </h1>
              <p class="text-muted-foreground text-xl font-medium">
                {title}
              </p>
            </div>

            <!-- Social Links -->
            {
              Object.entries(socialLinks).length > 0 && (
                <div class="flex flex-wrap gap-3">
                  {Object.entries(socialLinks).map(([platform, { url }]) => (
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="border-border/50 bg-background/80 text-muted-foreground hover:border-border hover:bg-muted hover:text-foreground inline-flex size-10 items-center justify-center rounded-lg border transition-all"
                      title={`Follow on ${platform}`}
                    >
                      <Icon name={platforms_info[platform as Platform].icon_name} class="size-4" />
                      <span class="sr-only">Follow on {platform}</span>
                    </a>
                  ))}
                </div>
              )
            }
          </div>
        </div>

        <!-- Description spanning full width -->
        <CompactProse>
          <Content />
        </CompactProse>
      </div>
    </div>
  </div>
</section>
