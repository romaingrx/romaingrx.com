---
import ContactForm from '@/components/home/ContactForm.astro';
import BaseLayout from '@/layouts/BaseLayout.astro';

const title = 'Contact Me';
const description = 'Get in touch with me for collaborations, questions, or just to say hello.';
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto flex min-h-screen flex-col items-center justify-center px-4 py-16">
    <div class="w-full max-w-2xl">
      <h1 class="mb-6 text-center text-4xl font-bold tracking-tight">Get in Touch</h1>
      <p class="mb-12 text-center text-muted-foreground">
        Have a question or want to work together? Feel free to reach out!
      </p>

      <ContactForm />
    </div>
  </main>
</BaseLayout>
